class Solution {
public:
    bool isValid(string s) {
        int sz = s.size();

        if(sz%2 != 0)return false;
        stack<char>st;

        for(int i=0; i<sz; i++){

            if(s[i]=='(' || s[i]=='{' || s[i]=='[' ){
                st.push(s[i]);
            }
            else{
                
                if(st.size()==0)return false;

                else if( (st.top()=='[' && s[i]==']') || (st.top()=='{' && s[i]=='}') || (st.top()=='(' && s[i]==')') ){
                    st.pop();
                }
                else{
                    return false;
                }
            }
        }
       return st.size()==0;
    }
};
