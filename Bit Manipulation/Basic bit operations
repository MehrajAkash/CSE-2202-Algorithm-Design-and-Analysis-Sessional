#include<bits/stdc++.h>
using namespace std;

int getBit(int n, int pos) // get ith bit
{
      return ( n & (1<<pos) ) ? 1 : 0;   // n=5= 101, 1<<2 = 100
     //return (n >> pos) & 1;
}

int setBit(int n, int pos)
{
    return ( n | (1 << pos) ); // (n=5=101) | (1<<1 = 010) == 111
}

int clearBit(int n, int pos)
{
    int mask = 1<<pos; /// 0100
    mask = ~mask; /// 1011
    return ( n & mask ); /// 0101 & 1011 = 0001
}

int main(){

    int n=5;

    cout<<"ith bit: "<< getBit(n, 2) <<endl;

    cout<<"2th bit=1, number is now: "<< setBit(n,1) <<endl; // 7

    cout<<"Clear 2th pos bit, number is now: "<< clearBit(n, 2) <<endl; //1;


 return 0;
}
